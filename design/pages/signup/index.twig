    background: yellow;
  } */
</style>

<div class="w-full relative h-fit min-h-screen">
  <div class="absolute w-full h-full">
    <img src="https://cdn.mypanel.link/af5a5a/g8e0q5syxhpd43wq.png" alt="" width="400px" class="absolute">
    <svg width="400" height="400" class="absolute bottom-0 right-0">
      <rect width="400" height="400" fill="#AFD9FF"></rect>
    </svg>
  </div>
          {# {% if error or success %}
            <div class="alert alert-dismissible alert-danger {% if site['rtl'] %} rtl-alert {% endif %}">
              <button type="button" class="close" data-dismiss="alert">&times;</button>
              {{ errorMessage }}
            </div>
          {% endif %}
          {% if success %}
            <div class="alert alert-dismissible alert-success {% if site['rtl'] %} rtl-alert {% endif %}">
              <button type="button" class="close" data-dismiss="alert">&times;</button>
              {{ successText }}
            </div>
          {% endif %} #}

  {% if success or error %}
    <div class="absolute w-full z-20 max-w-5xl sm:mx-auto inset-x-0 my-4 sm:my-12 px-2 opacity-95 hover:opacity-80 transition-opacity"
      x-data="{ show: true, isSuccess: {{ success ? 'true' : 'false' }} }">
      <div class="alert shadow-lg w-full" :class="isSuccess ? 'alert-success':'alert-error'" x-show="show">
        <div>
          <svg x-show="!isSuccess" xmlns="http://www.w3.org/2000/svg" class="stroke-current self-start flex-shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
          <svg x-show="isSuccess" xmlns="http://www.w3.org/2000/svg" class="stroke-current self-start flex-shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
          {% if success %}<span>{{ successText }}</span>{% endif %}
          {% if error %}<span>{{ errorMessage }}</span>{% endif %}
          <button class="absolute top-2 md:top-4 right-4" @click="show = false">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
          </button>
        </div>
      </div>
    </div>
  {% endif %}

  <div class="flex md:items-start h-full py-3 md:py-5 relative">
    <div class="card rounded-box bg-white shadow-lg sm:w-9/12 mx-auto">
      <div class="relative card-body flex">
        <img src="https://cdn.mypanel.link/af5a5a/ty4lrn0tss4g2dop.jpg" alt="Holding a phone" class="absolute -bottom-16 w-[44rem] -left-24 opacity-40 xl:opacity-80">
        <div class="absolute max-w-lg">
          {# <a class="hidden lg:flex mb-4" href="/">
            <img src="https://cdn.mypanel.link/af5a5a/5poolxxjg4ox7pog.png" alt="Logo TokeyFollower" class="img-fluid float-center">
          </a> #}
          <div id="signup-illustrate" class="h-full relative">
            <div class="">
              <span class="elements-popping absolute top-0 left-[4rem]"><img src="https://cdn.mypanel.link/af5a5a/0tqzl6oq0dsqeo33.jpg" alt="Comment" class="scale-75"></span>
              <span class="elements-popping absolute top-[4rem] left-[25rem]"><img src="https://cdn.mypanel.link/af5a5a/9gqznfqwztfxrpp3.jpg" alt="Like" class="scale-75"></span>
              <span class="elements-popping absolute top-[16rem] left-[10rem]"><img src="https://cdn.mypanel.link/af5a5a/9gqznfqwztfxrpp3.jpg" alt="Like" class="scale-75"></span>
              <span class="elements-popping absolute top-[20rem] left-[20rem]"><img src="https://cdn.mypanel.link/af5a5a/0tqzl6oq0dsqeo33.jpg" alt="Comment" class="scale-75"></span>
            </div>
          </div>
        </div>
        <div class="flex flex-col md:flex-row relative right-0 self-end max-w-lg lg:max-w-2xl">
          <a class="mb-4 mr-8 md:ml-auto" href="/">
            <img src="https://cdn.mypanel.link/af5a5a/5poolxxjg4ox7pog.png" alt="Logo TokeyFollower" class="img-fluid float-center">
          </a>
          <div>
            <div class="">
              <h2 class="mb-4 text-2xl font-extrabold">Mulakan pengalaman anda di TokeyFollower hari ini!</h2>
              <p class="mb-4 text-sm text-neutral-dark-300">Servis yang murah. Sistem yang mudah. Server yang pantas. Bina sales dengan servis kami. Sudah ada akaun? <a href="/" class="link link-primary">Log Masuk</a></p>
            </div>
            <form action="" method="post">
              <div class="form-control w-full mb-2">
                <label class="label" for="username">
                  <span class="label-text">Username / No Telefon</span>
                </label>
                <input type="text" placeholder="Username" class="input input-bordered w-full" id="username" value="" name="RegistrationForm[login]" />
              </div>
              <div class="grid md:grid-cols-2 gap-3 mb-2">
                <div class="form-control w-full">
                  <label class="label" for="firstname">
                    <span class="label-text">First Name</span>
                  </label>
                  <input type="text" class="input input-bordered w-full" id="firstname" value="" name="RegistrationForm[first_name]">
                </div>
                <div class="form-control w-full">
                  <label class="label" for="lastname">
                    <span class="label-text">Last Name</span>
                  </label>
                  <input type="text" class="input input-bordered w-full" id="lastname" value="" name="RegistrationForm[last_name]">
                </div>
              </div>
              <div class="form-control w-full mb-2">
                <label class="label" for="email">
                  <span class="label-text">Email</span>
                </label>
                <input type="email" class="input input-bordered w-full" id="email" value="" name="RegistrationForm[email]">
              </div>
            
              <div class="grid md:grid-cols-2 gap-3 mb-2">
                <div class="form-control w-full">
                  <label class="label" for="password">
                    <span class="label-text">Password</span>
                  </label>
                  <input type="password" class="input input-bordered w-full" id="password" name="RegistrationForm[password]">
                </div>
                <div class="form-control w-full">
                  <label class="label" for="password">
                    <span class="label-text">Password</span>
                  </label>
                  <input type="password" class="input input-bordered w-full" id="confirm" name="RegistrationForm[password_again]">
                </div>
              </div>
              {# Todo: Captcha #}
              {% if site['captcha'] %}
                <div class="my-4">
                    {{ captchaCode }}
                </div>
              {% endif %}
              {% if true or check_agreement %}
                <div class="form-control w-fit">
                  <label class="label cursor-pointer">
                    <span class="label-text mr-2">Setuju dengan <a class="link link-primary" href="/terms"> Terma & Syarat</a></span>
                    <input type="checkbox" checked="checked" class="checkbox checkbox-primary" name="RegistrationForm[termsofservice]" />
                  </label>
                </div>
              {% endif %}
              <input type="hidden" name="_csrf" value="{{csrftoken}}">
              <button type="submit" class="btn btn-primary mt-8 ml-auto flex items-center gap-2">
                Daftar
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M17.25 8.25L21 12m0 0l-3.75 3.75M21 12H3" />
                </svg>
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>